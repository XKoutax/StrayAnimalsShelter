<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727"
    android:padding="10dp">

    <TextView
        android:textAlignment="viewStart"
        android:id="@+id/dialogGR_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Marker"
        android:layout_marginStart="16dp"
        android:background="#272727"
        android:fontFamily="@font/roboto_mono"
        android:textColor="#32B4E3"
        android:textSize="24sp"
        android:padding="2dp"/>


    <TextView
        android:id="@+id/dialogGR_FromTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogGR_Title"
        android:layout_marginTop="5dp"
        android:background="#272727"
        android:fontFamily="@font/roboto_mono"
        android:padding="2dp"
        android:text="From:"
        android:textColor="#32B4E3"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialogGR_FromUsernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogGR_FromTextView"
        android:background="#2E2E2E"
        android:fontFamily="@font/roboto_mono"
        android:padding="2dp"
        android:text="Username"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialogGR_FromEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogGR_FromUsernameTextView"
        android:layout_marginTop="1dp"

        android:background="#2E2E2E"
        android:fontFamily="@font/roboto_mono"
        android:padding="2dp"
        android:text="Email address"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialogGR_MessageTextView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/dialogGR_FromEmailTextView"
        android:layout_marginTop="10dp"
        android:background="#2E2E2E"
        android:fontFamily="@font/roboto_mono"
        android:gravity="top"
        android:hint="Additional message..."
        android:padding="3dp"
        android:scrollbars="vertical"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogGR_MessageTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/dialogGR_DenyTV"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center"
            android:text="Deny"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#32B4E3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialogGR_AcceptTV"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center"
            android:text="Accept"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#32B4E3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialogGR_DoNothingTV"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center"
            android:text="Do Nothing"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#32B4E3"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>