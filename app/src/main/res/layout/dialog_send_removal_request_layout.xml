<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:background="#2E2E2E"
        android:layout_marginTop="5dp"
        android:id="@+id/dialogSR_usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="18sp"
        android:textColor="#fff"/>

    <TextView
        android:background="#2E2E2E"
        android:layout_marginTop="5dp"
        android:id="@+id/dialogSR_phonenumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogSR_usernameTextView"
        android:textColor="#fff"
        android:text="Phone number"
        android:textSize="18sp" />

    <EditText
        android:background="#2E2E2E"
        android:padding="2dp"
        android:layout_marginTop="15dp"
        android:id="@+id/dialogSR_messageEditText"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/dialogSR_phonenumberTextView"
        android:textColor="#fff"
        android:gravity="top"
        android:hint="Additional message..."
        android:textColorHint="#fff"
        android:textSize="20sp" />

</RelativeLayout>