<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SelectedAnimalFromMarkerActivity">

    <include
        android:id="@+id/default_toolbar_from_marker"
        layout="@layout/default_toolbar">

    </include>

    <ImageView
        android:id="@+id/selectedAnimalFromMarkerImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/green_border_background"
        android:padding="3dp"
        android:src="@drawable/ic_no_image_available"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_toolbar_from_marker" />


    <TextView
        android:id="@+id/selectedAnimalFromMarkerNameTV"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="5"
        android:ellipsize="end"
        android:text="Animal Name"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/selectedAnimalFromMarkerImageView"
        app:layout_constraintTop_toBottomOf="@+id/default_toolbar_from_marker" />

    <TextView
        android:id="@+id/staticSelectedAnimalFromMarkerAgeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="Age: "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@+id/selectedAnimalFromMarkerNameTV"
        app:layout_constraintTop_toBottomOf="@+id/selectedAnimalFromMarkerNameTV" />

    <TextView
        android:id="@+id/selectedAnimalFromMarkerAgeTV"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:text="8 yrs"
        android:textAlignment="viewStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/staticSelectedAnimalFromMarkerAgeTV"
        app:layout_constraintTop_toTopOf="@+id/staticSelectedAnimalFromMarkerAgeTV" />

    <ImageView
        android:id="@+id/selectedAnimalFromMarkerIconIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/dog_icon"
        app:layout_constraintStart_toStartOf="@+id/selectedAnimalFromMarkerImageView"
        app:layout_constraintTop_toTopOf="@+id/selectedAnimalFromMarkerImageView" />


    <CheckBox
        android:id="@+id/selectedAnimalFromMarkerNeuteredCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:text="Neutered"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/staticSelectedAnimalFromMarkerAgeTV"
        app:layout_constraintTop_toBottomOf="@+id/staticSelectedAnimalFromMarkerAgeTV" />

    <CheckBox
        android:id="@+id/selectedAnimalFromMarkerAdultCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:text="Adult"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/selectedAnimalFromMarkerNeuteredCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/selectedAnimalFromMarkerNeuteredCheckBox" />

    <TextView
        android:id="@+id/selectedAnimalFromMarkerObsTV"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:text="sample text # # # # # # # # # # # # # # # # # # # # # # # # # # # "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedAnimalFromMarkerImageView" />



</android.support.constraint.ConstraintLayout>