<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialogGA_FromTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#272727"
        android:fontFamily="@font/roboto_mono"
        android:padding="2dp"
        android:text="From:"
        android:textColor="#32B4E3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialogGA_FromUsernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogGA_FromTextView"
        android:background="#2E2E2E"
        android:fontFamily="@font/roboto_mono"
        android:padding="2dp"
        android:text="Username"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialogGA_FromEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogGA_FromUsernameTextView"
        android:layout_marginTop="1dp"
        android:background="#2E2E2E"
        android:fontFamily="@font/roboto_mono"
        android:padding="2dp"
        android:text="Email address"
        android:textColor="#fff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogGA_FromEmailTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">


        <TextView
            android:id="@+id/dialogGA_DenyTV"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center"
            android:text="Deny"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#32B4E3"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/dialogGA_AcceptTV"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center"
            android:text="Accept"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#32B4E3"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialogGA_DoNothingTV"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center"
            android:text="Do Nothing"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#32B4E3"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>